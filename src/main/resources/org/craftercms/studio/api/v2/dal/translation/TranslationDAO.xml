<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.craftercms.studio.api.v2.dal.translation.TranslationDAO">

    <resultMap id="localizedItem" type="org.craftercms.studio.api.v2.dal.translation.LocalizedItem"/>

    <sql id="itemsQuery">
        from
            item I
            right join
                (select id from site where site_id = #{siteId}) S on S.id = I.site_id
        <where>
            <if test="path != null">
                I.path RLIKE #{path}
            </if>
            <if test="locale != null">
                and I.locale_code = #{locale}
            </if>
            <if test="markedForTranslation">
                and I.state &amp; #{markedForTranslationMask}
            </if>
        </where>
    </sql>

    <select id="countItems" resultType="int">
        select
            count(*)
        <include refid="itemsQuery"/>
    </select>

    <select id="getItems" resultMap="localizedItem">
        select
            *
        <include refid="itemsQuery"/>
        limit ${limit} offset ${offset}
    </select>

    <insert id="insertTranslationRequests">
        <foreach collection="ids" item="id">
            <foreach collection="locales" item="locale">
                insert into item_translation_request (source_id, locale_code) values (#{id}, #{locale})
            </foreach>
        </foreach>
    </insert>

</mapper>